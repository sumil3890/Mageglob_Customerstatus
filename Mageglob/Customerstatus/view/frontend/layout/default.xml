<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Mageglob\Customerstatus\Block\Link" name="update-status-link" after="wish-list-link">
                <arguments>
                    <argument name="sortOrder" xsi:type="number">60</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" template="Mageglob_Customerstatus::status.phtml" after="top.links" cacheable="false"/>
        </referenceContainer>
    </body>
</page>

